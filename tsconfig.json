{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    // https://stackoverflow.com/questions/70665608/where-are-the-typescript-type-declarations-for-sign-in-with-google-gsi-library
    "types": ["google.accounts"],

    /* Extra settings */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./webapp/src/*"]
    }
  },
  "include": ["backend", "webapp/src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }],
  "ts-node": {
    "esm": true,
    "files": true,
    "experimentalSpecifierResolution": "node"
  }
}
